{
  "name": "swr",
  "version": "0.4.2",
  "description": "React Hooks library for remote data fetching",
  "main": "./dist/index.js",
  "module": "./dist/index.module.js",
  "react-native": "./dist/index.module.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "esm/**"
  ],
  "repository": "vercel/swr",
  "homepage": "https://swr.vercel.app",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:declaration",
    "build:cjs": "esbuild src/index.ts --bundle --outfile=dist/index.js --define:process.env.NODE_ENV=\\\"production\\\" --minify --external:react --external:dequal --format=cjs --target=es6",
    "build:esm": "esbuild src/index.ts --bundle --outfile=dist/index.module.js --define:process.env.NODE_ENV=\\\"production\\\" --minify --external:react --external:dequal --format=esm --target=es6",
    "build:declaration": "tsc --outDir dist --emitDeclarationOnly",
    "watch": "tsc --watch",
    "types:check": "tsc --noEmit",
    "format": "prettier --write \"{src,test,examples}/**/*.{ts,tsx}\"",
    "lint": "eslint \"{src,test,examples}/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"{src,test,examples}/**/*.{ts,tsx}\" --fix",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run types:check && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint:fix",
      "npm run format",
      "git add"
    ]
  },
  "devDependencies": {
    "@testing-library/react": "10.1.0",
    "@types/jest": "25.2.3",
    "@types/node": "11.12.0",
    "@types/react": "16.9.11",
    "@typescript-eslint/eslint-plugin": "2.5.0",
    "@typescript-eslint/parser": "2.5.0",
    "esbuild": "0.8.54",
    "eslint": "6.6.0",
    "eslint-config-prettier": "6.5.0",
    "eslint-plugin-react": "7.20.6",
    "eslint-plugin-react-hooks": "4.1.2",
    "husky": "2.4.1",
    "jest": "25.5.4",
    "lint-staged": "8.2.1",
    "prettier": "1.18.2",
    "react": "16.11.0",
    "react-dom": "16.11.0",
    "ts-jest": "25.5.1",
    "typescript": "3.6.4"
  },
  "dependencies": {
    "dequal": "2.0.2"
  },
  "peerDependencies": {
    "react": "^16.11.0 || ^17.0.0"
  }
}
